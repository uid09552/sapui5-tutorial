<mvc:View
        controllerName="max.ui.test.controller.MyApp"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true">
    <App>
        <pages>

            <Page title="{i18n>homePageTitle}">
                <content>
                    <Panel
                            headerText="{i18n>helloPanelTitle}">
                        <content>

                            <Button
                                    text="{i18n>showHelloButtonText}{i18n>showHelloButtonText}"
                                    press="onShowHello"/>
                            <Input
                                    value="{/recipient/name}"
                                    description="Hello {/recipient/name}"
                                    valueLiveUpdate="true"
                                    width="60%"/>
                        </content>
                    </Panel>
                    <Panel
                            headerText="{i18n>helloPanelTitle}">
                        <content>

                            <Button
                                    text="{i18n>showHelloButtonText}{i18n>showHelloButtonText}"
                                    press="onShowHello"/>
                            <Input
                                    value="{/recipient/name}"
                                    description="Hello {/recipient/name}"
                                    valueLiveUpdate="true"
                                    width="60%"/>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>